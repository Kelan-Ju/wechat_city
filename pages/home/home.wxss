.swiper {
  margin: 0rpx;
  padding: 0rpx;
  width: 750rpx;
  height: 400rpx;
}
/* ---------------------------------- 地址 ------------------------------- */
.addressView {
  position: fixed;
  top: 0rpx;
  width: 750rpx;
  height: 80rpx;
  background-color: black;
  opacity: 0.4;
}
.address-icon {
  margin: 25rpx 5rpx 0rpx 15rpx;
  width: 35rpx;
  height: 35rpx;
  float: left;
}

.address-name {
  margin-top: 20rpx;
  width: 49%;
  font-size: 15px;
  color: white;
  float: left; 
  opacity: 0.7;
}
.text-type {
  text-overflow: ellipsis; /*超出省略*/
  white-space: nowrap; /*不换行*/
  overflow: hidden; /*超出不显示*/
}

/* ---------------------------------- 搜索、扫描 ------------------------------- */

.search-scan {
  margin: 15rpx 20rpx 0rpx 5rpx;
  width: 40%;
  height: 50rpx;
  background-color: white;
  opacity: 0.6;
  border-radius: 25rpx;
  float: right;
}

.search-scan .search {
  margin: 7rpx 0rpx 10rpx 10rpx;
  width: 40rpx;
  height: 40rpx;
  float: left;
}
.search-placeholder {
  margin-left: 5rpx;
  text-align: left;
  color: black;
  line-height: 50rpx;
  font-size: 15px;
  float: left;
}

/* ---------------------------------- 统计 ------------------------------- */

#count-type {
  margin: 0rpx;
  padding: 25rpx 30rpx;
  font-size: 15px;
  color: gray;
  clear: both;
}

.count-list {
  float: left;
  width: 33.3%;
}

.count-icon image {
  padding: 0rpx 0rpx;
  width: 40rpx;
  height: 40rpx;
  float: left;
}

.count-title {
  margin-left: 40rpx;
}

/* ---------------------------------- 公告 ------------------------------- */
#announcement_type {
  margin: 0rpx;
  padding: 25rpx 10rpx;
  font-size: 15px;
  clear: both;
}

.announcement-title {
  float: left;
}

.announcement-gap {
  padding: 0rpx 10rpx;
  color: gray;
  float: left;
}

#announcement_type swiper{
  width: 80%;
  height: 40rpx;
  float: left;
}

.announcement-content {
  width: 83%;
  float: left;
  color: gray;
}

.announcement-date {
  float: right;
}

.announcement-close {
  margin: 0rpx 10rpx;
  padding-top: 5rpx;
  width: 33rpx;
  height: 33rpx;
  float: right;
}

/* ---------------------------------- 服务按钮 ------------------------------- */

#service-type {
  margin-top: 35rpx;
  height: 405rpx;
  font-size: 15px;
  text-align: center;
  border-top:  10rpx #ebebeb solid;
  border-bottom: 10rpx #ebebeb solid;
}

.service-item {
  width: 20%;
  height: 42%;
  float: left;
}

.service-item image {
  margin: 25rpx 25rpx 0rpx 25rpx;
  width: 100rpx;
  height: 100rpx;
}

.service-item view {
  height: 20rpx;
}

/* ---------------------------------- 发布列表类型按钮 ------------------------------- */
.publication-bg {
  margin: 0rpx;
  padding: 0rpx;
  width: 750rpx;
  height: auto;
  font-size: 15px;
  line-height: 60rpx;
  border-bottom: 1px #ccc solid;
}
.publication-bg .newPublication {
  margin-top: 20rpx;
  width: 50%;
  height: 60rpx;
  text-align: center;
  float: left;
}
.publication-bg .nearest {
  margin-top: 20rpx;
  width: 50%;
  height: 60rpx;
  text-align: center;
  float: left;
}

.bottom-line-left {
  margin-bottom: 0rpx;
  margin-left: 12.5%;
  width: 25%;
  height: 4rpx;
  float: left; 
}
.bottom-line-right {
  margin-bottom: 0rpx;
  margin-left: 62.5%;
  width: 25%;
  height: 4rpx;
  float: left; 
}

