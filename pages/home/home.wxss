.setTop {
  margin-top: 0rpx;
  margin-right: 0rpx;
  width: 80rpx;
  height: 80rpx;
  float: right;
}
.publicationContent {
  margin: 10rpx;
  width: 750rpx;
  height: auto;
  font-size: 15px;
  letter-spacing: 0.5px;
  /* line-height: 19px; */
  float: left;
}
.sharing-bg {
  margin: 10rpx 0rpx;
  width: 750rpx;
