/* pages/home/search/search.wxss */
.searchBar-bg {
  margin: 0rpx; 
  width: 100%;
  height: 100rpx;
  background-color: #eee;
}
.search-bg {
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 580rpx;
  height: 60rpx;
  background-color: white;
  font-size: 15px;
  border-radius: 10rpx;
  float: left;
}
.search-bg image {
  margin: 10rpx 10rpx 10rpx 15rpx; 
  width: 40rpx;
  height: 40rpx;
  float: left;
}
.search-bg input {
  margin-left: 10rpx;
  margin-top: 0rpx;
  width: 510rpx;
  height: 100%;
}
.search-btn {
  line-height: 100rpx;
  background: none;
}
.search-btn::after {
   border: none;
} 

/******************************* 搜索历史 *******************************/
.history-bg {
  margin: 0rpx;
  width: 100%;
  height: auto;
}
.history-bg .history-title {
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: auto;
  color: #aaa;
  float: left;
}
.history-bg .history-content-bg {
  margin-top: 15rpx;
  margin-left: 20rpx;
  width: 710rpx;
  height: auto;
  float: left;
}
.history {
  margin: 0rpx 20rpx 20rpx 0rpx;
  padding: 10rpx;
  width: auto;
  height: 17px;
  line-height: 17px;
  color: #aaa;
  font-size: 15px;
  border: 1rpx #ccc solid;
  border-radius: 10rpx;
  float: left;
}